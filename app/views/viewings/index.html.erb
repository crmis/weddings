<div class="main-form">
  <fieldset>
    <h3> Viewings for the <%= @room.name %></h3>
    <table id="viewings_table">
      <tr>
        <th>Start</th>
        <th>End</th>
        <th>User</th>
      </tr>
      <% @viewings.each do |viewing| %>
          <tr>
            <td>
              <%= viewing.start_time.strftime('%e %b %Y %H:%M%p') %> |
            </td>
            <td>
              <%= (viewing.calculate_end_time + 60).strftime('%e %b %Y %H:%M%p') %> |
            </td>
            <td>
              <%= viewing.user.user_info %>
            </td>
            <td><%#= link_to "Show", room_viewing_path(@room, viewing) %>
            </td>
            <td><%#= link_to "Edit", edit_room_viewing_path(@room, viewing) %>
            </td>
            <td><%#= link_to "Delete", room_viewing_path(@room, viewing), data: { confirm: 'Are you sure?' }, method: :delete %>
            </td>
          </tr>
      <% end %>
    </table>
  </fieldset>
</div>
